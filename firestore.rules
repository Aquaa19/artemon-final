rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow read: if true; 
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // --- ADD THIS SECTION FOR ORDERS ---
    match /orders/{orderId} {
      // Allow users to see their own orders, and admins to see everything
      allow read: if request.auth != null && (request.auth.uid == resource.data.user_id || isAdmin());
      // Only admins can update or delete orders
      allow write: if isAdmin();
      // Allow initial order creation for logged-in users
      allow create: if request.auth != null;
    }
    
    match /otp_requests/{email} {
      allow read, write: if false;
    }
  }
}